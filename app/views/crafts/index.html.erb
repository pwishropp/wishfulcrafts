
<div class="booyah-box col-10 offset-1">


<h1>Featured Crafts</h1>
<br />
  <div class="row">
    <% @crafts.each do |craft| %>
      <div class="booyah-box">
        <h2><%= link_to craft.name, craft_path(craft) %></h2>
        <p><%= craft.cost %></p>
        <%= image_tag(craft.thumbnail) %>

      </div>
    <% end %>
  </div> 


<h1>Coming Soon</h1>
</div>

